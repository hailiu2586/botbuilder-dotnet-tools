{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "namePrefix": {
            "type": "string",
            "defaultValue": "va-rollout-"
        },
        "uniqueSuffix": {
            "type": "string",
            "defaultValue": "[toLower(substring(uniqueString(resourceGroup().id, 'va-resources'), 0, 6))]"
        }
    },
    "variables": {
        "location": "[resourceGroup().location]",
        "msiName": "[concat(parameters('namePrefix'), 'id-', parameters('uniqueSuffix'))]",
        "msiId": "[resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', variables('msiName'))]",
        "assignmentName": "[concat(parameters('namePrefix'), 'role-', parameters('uniqueSuffix'))]",
        "assignmentGuid": "[guid(variables('assignmentName'))]",
        "contributorRoleDefinitionId": "[concat('/subscriptions/', subscription().subscriptionId, '/providers/Microsoft.Authorization/roleDefinitions/', 'b24988ac-6180-42a0-ab88-20f7382dd24c')]",
    },
    "resources": [
        {
            "name": "[variables('msiName')]",
            "comments": "user assigned managed identity for deployment manager rollout",
            "location": "[variables('location')]",
            "apiVersion": "2018-11-30",
            "type": "Microsoft.ManagedIdentity/userAssignedIdentities",
            "properties": {}
        },
        {
            "type": "Microsoft.Authorization/roleAssignments",
            "comments": "assign contributor role on the resource group to the rollout identity",
            "apiVersion": "2018-09-01-preview",
            "dependsOn": [
                "[variables('msiName')]"
            ],
            "name": "[variables('assignmentGuid')]",
            "properties": {
                "roleDefinitionId": "[variables('contributorRoleDefinitionId')]",
                "principalId": "[reference(variables('msiId'), '2018-11-30', 'Full').properties.principalId]",
                "scope": "[resourceGroup().id]"
            }
        }
    ],
    "outputs": {
        "principalId": {
            "type": "string",
            "value": "[reference(variables('msiId'), '2018-11-30', 'Full').properties.principalId]"
        },
        "msiId": {
            "type": "string",
            "value": "[variables('msiId')]"
        }
    }
}
